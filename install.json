{
  "run": [{
    "method": "shell.run",
    "params": {
      "message": "git clone https://github.com/cocktailpeanut/audio-webui"
    }
  }, {
    "method": "shell.run",
    "params": {
      "message": "{{os.platform() === 'win32' ? '' : 'brew install mecab'}}"
    }
  }, {
    "method": "shell.start",
    "params": {
      "path": "audio-webui"
    }
  }, {
    "method": "shell.enter",
    "params": {
      "message": "{{os.platform() === 'win32' ? 'python main.py' : 'bash run.sh'}}",
      "on": [{
        "event": "/Running on local URL:  (http:\/\/[0-9.:]+)/",
        "return": "{{event.matches[0][1]}}"
      }]
    }
  }, {
    "method": "shell.enter",
    "params": {
      "message": "pip install -U numpy",
      "on": [{
        "event": null,
        "return": true
      }]
    }
  }, {
    "method": "process.wait"
  }]
}
